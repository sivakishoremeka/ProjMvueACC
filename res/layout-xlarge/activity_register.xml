<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FF7C00"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/a_reg_iv_img_acc"
        android:layout_width="330dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/img_acc" />

    <LinearLayout
        android:layout_width="477dp"
        android:layout_height="670dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/img_bg_reg_forum"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/a_reg_tv_user_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="25dp"
            android:text="@string/user_reg"
            android:textColor="#5A5A5A"
            android:textSize="28sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/a_reg_et_mobile_no"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:background="@drawable/img_et_reg"
            android:ems="10"
            android:hint="@string/mobile_no"
            android:inputType="phone"
            android:paddingLeft="13dp"
            android:textSize="23sp" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/a_reg_et_first_name"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:background="@drawable/img_et_reg"
            android:ems="10"
            android:hint="@string/first_name"
            android:inputType="text"
            android:paddingLeft="13dp"
            android:textSize="23sp" />

        <EditText
            android:id="@+id/a_reg_et_last_name"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:background="@drawable/img_et_reg"
            android:ems="10"
            android:hint="@string/last_name"
            android:inputType="text"
            android:paddingLeft="13dp"
            android:textSize="23sp" />

        <EditText
            android:id="@+id/a_reg_et_email_id"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:background="@drawable/img_et_reg"
            android:ems="10"
            android:hint="@string/email_id"
            android:inputType="text"
            android:paddingLeft="13dp"
            android:textSize="23sp" />

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp" >

            <Button
                android:id="@+id/a_reg_btn_cancel"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:onClick="btnCancel_onClick" 
                android:background="@drawable/selector_btn_cancel" />

            <Button
                android:id="@+id/a_reg_btn_submit"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:onClick="btnSubmit_onClick" 
                android:background="@drawable/selector_btn_submit" />
        </LinearLayout>

        <TextView
            android:id="@+id/a_reg_tv_note"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"
            android:text="@string/reg_note"
            android:textColor="#5A5A5A"
            android:textSize="17sp" />
    </LinearLayout>

</LinearLayout>