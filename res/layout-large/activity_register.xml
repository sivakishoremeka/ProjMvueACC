<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FF7C00"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/a_reg_iv_img_acc"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:src="@drawable/img_acc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="560dp"
        android:layout_marginBottom="85dp"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:background="@drawable/img_bg_reg_forum"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/a_reg_tv_user_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="25dp"
            android:text="@string/user_reg"
            android:textColor="#5A5A5A"
            android:textSize="27sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/a_reg_et_mobile_no"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:background="@drawable/img_et_reg"
            android:ems="10"
            android:hint="@string/mobile_no"
            android:inputType="phone"
            android:paddingLeft="10dp"
            android:textSize="22sp" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/a_reg_et_first_name"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:background="@drawable/img_et_reg"
            android:ems="10"
            android:hint="@string/first_name"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/a_reg_et_last_name"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:background="@drawable/img_et_reg"
            android:ems="10"
            android:hint="@string/last_name"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/a_reg_et_email_id"
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:background="@drawable/img_et_reg"
            android:ems="10"
            android:hint="@string/email_id"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp" >

            <Button
                android:id="@+id/a_reg_btn_cancel"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0.90"
                android:background="@drawable/btn_cancel"
                android:onClick="btnCancel_onClick"  />

            <Button
                android:id="@+id/a_reg_btn_submit"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="0.90"
                android:background="@drawable/btn_submit"
                android:onClick="btnSubmit_onClick"  />
        </LinearLayout>

        <TextView
            android:id="@+id/a_reg_tv_note"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:text="@string/reg_note"
            android:textAlignment="center"
            android:textColor="#5A5A5A"
            android:textSize="19sp" />
    </LinearLayout>

</LinearLayout>